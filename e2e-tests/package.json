{
  "name": "ecauth-mockidp-e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests for EcAuth MockIdP using Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:dev": "playwright test --project=dev",
    "test:staging": "playwright test --project=staging",
    "test:production": "playwright test --project=production",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "codegen": "playwright codegen"
  },
  "keywords": [
    "e2e",
    "playwright",
    "mockidp",
    "openid-connect",
    "oauth2"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^22.0.0",
    "dotenv": "^17.2.3"
  }
}
