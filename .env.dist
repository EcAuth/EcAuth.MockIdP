# Database Configuration
DB_HOST=localhost
DB_PORT=1433
MOCK_IDP_DB_NAME=MockIdpDb
DB_USER=sa
DB_PASSWORD=YourStrong@Passw0rd

# Connection String (used by EF Core migrations)
ConnectionStrings__MockIdpDbContext=Server=${DB_HOST},${DB_PORT};Database=${MOCK_IDP_DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=true;

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080;https://+:8081

# HTTPS Certificate (for development)
ASPNETCORE_Kestrel__Certificates__Default__Path=/https/aspnetapp.pfx
ASPNETCORE_Kestrel__Certificates__Default__Password=changeit

# Default Organization (if not specified in request)
DEFAULT_ORGANIZATION=dev

# GitHub Personal Access Token (required for Docker build)
# Generate a token with `read:packages` scope at https://github.com/settings/tokens
# Or use GitHub CLI: gh auth token
GITHUB_TOKEN=
